<?xml version="1.0" encoding="utf-8"?>
<androidx.coordinatorlayout.widget.CoordinatorLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/mainConstraintLayout"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/appBackground"
    tools:context=".views.lumperSheet.LumperWorkDetailActivity">

    <include
        android:id="@+id/header"
        layout="@layout/dashboard_layout_toolbar" />

    <include
        android:id="@+id/lumperContentDetail"
        layout="@layout/content_lumper_work_detail" />

    <View
        android:id="@+id/bottomSheetBackground"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@color/fabBackgroundOverlay"
        android:visibility="gone" />

    <!-- Adding bottom sheet after main content -->
    <include layout="@layout/bottom_sheet_lumper_work_detail" />

</androidx.coordinatorlayout.widget.CoordinatorLayout>
