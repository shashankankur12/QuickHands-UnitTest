<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:shimmer="http://schemas.android.com/tools"
    android:id="@+id/constraint_root"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <EditText
        android:id="@+id/edit_search_lumper"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:layout_constraintTop_toTopOf="parent"
        android:hint="@string/search_by_name"
        android:singleLine="true"
        android:drawableLeft="@drawable/ic_search"
        android:drawableTint="@color/colorLightGrey"
        android:drawablePadding="@dimen/_2sdp"
        style="@style/textSizeNormalRegFont"
        android:layout_marginLeft="@dimen/_10sdp"
        android:layout_marginRight="@dimen/_10sdp"
        android:layout_marginBottom="@dimen/_10sdp"
        android:imeOptions="actionDone"
        android:paddingRight="@dimen/_30sdp"
        android:fontFamily="@font/poppinssemibold"
        android:background="@drawable/edit_search_bg"
        android:layout_margin="@dimen/_10sdp"/>

    <ImageView
        android:id="@+id/image_cancel"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:src="@drawable/ic_cancel"
        app:layout_constraintTop_toTopOf="parent"
        android:layout_marginTop="@dimen/_8sdp"
        android:layout_marginEnd="@dimen/_20sdp"
        android:visibility="gone"
        android:tint="@color/colorLightGrey"
        app:layout_constraintBottom_toBottomOf="@+id/edit_search_lumper"
        app:layout_constraintEnd_toEndOf="parent"/>

    <androidx.recyclerview.widget.RecyclerView
        android:id="@+id/recycler_lumper"
        android:layout_width="match_parent"
        android:layout_marginTop="@dimen/_8sdp"
        app:layout_constraintTop_toBottomOf="@+id/edit_search_lumper"
        android:layoutAnimation="@anim/recycler_anim"
        android:layout_height="0dp"
        app:layout_constraintBottom_toBottomOf="parent"/>

    <TextView
        android:id="@+id/text_no_record_found"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/string_no_record_found"
        android:visibility="gone"
        style="@style/textSizeNormalRegFont"
        android:fontFamily="@font/poppinssemibold"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"/>
</androidx.constraintlayout.widget.ConstraintLayout>