<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    xmlns:app="http://schemas.android.com/apk/res-auto">
    <View
        android:layout_width="match_parent"
        android:id="@+id/viewLine"
        android:layout_height="1dp"
        android:background="@color/gray_btn_bg_color"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="parent"/>

    <TextView
        style="@style/valuesVerySmallTextViewTheme"
        android:textColor="@color/textBlack"
        android:layout_width="@dimen/_50sdp"
        android:id="@+id/textViewItemDoor"
        android:layout_height="wrap_content"
        app:layout_constraintTop_toBottomOf="@+id/viewLine"
        app:layout_constraintStart_toStartOf="parent"
        />
    <TextView
        style="@style/valuesVerySmallTextViewTheme"
        android:textColor="@color/textBlack"
        android:layout_width="@dimen/_50sdp"
        android:id="@+id/textViewItemContainer"
        android:layout_height="wrap_content"
        app:layout_constraintStart_toEndOf="@+id/textViewItemDoor"
        app:layout_constraintTop_toBottomOf="@+id/viewLine"/>
    <TextView
        style="@style/valuesVerySmallTextViewTheme"
        android:textColor="@color/textBlack"
        android:layout_width="wrap_content"
        android:id="@+id/textViewItemContainerNote"
        android:layout_height="wrap_content"
        app:layout_constraintStart_toEndOf="@+id/textViewItemContainer"
        app:layout_constraintTop_toBottomOf="@+id/viewLine"/>
</androidx.constraintlayout.widget.ConstraintLayout>