<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".view.activities.AssignLumpersActivity">

    <include android:id="@+id/header"
        layout="@layout/layout_header" />

    <LinearLayout
        android:id="@+id/linear_event_details"
        android:layout_width="match_parent"
        android:background="@color/colorLightBlue"
        android:padding="@dimen/_10sdp"
        android:orientation="vertical"
        app:layout_constraintTop_toBottomOf="@id/header"
        android:layout_height="wrap_content">

        <TextView
            android:id="@+id/text_location"
            android:layout_width="wrap_content"
            android:textColor="@color/colorBlack"
            style="@style/textSizeNormalRegFont"
            android:text="Location : FlipKart, Gurgaon"
            android:layout_height="wrap_content" />

        <TextView
            android:id="@+id/text_lumper_count"
            android:layout_width="wrap_content"
            android:textColor="@color/colorBlack"
            style="@style/textSizeNormalRegFont"
            android:text="Lumpers Required : 5"
            android:layout_height="wrap_content" />

        <TextView
            android:id="@+id/text_date"
            android:layout_width="wrap_content"
            android:textColor="@color/colorBlack"
            style="@style/textSizeNormalRegFont"
            android:text="Date : Wed Jan 15, 2020, 3:00 AM"
            android:layout_height="wrap_content" />
    </LinearLayout>

    <TextView
        android:id="@+id/text_lumper_heading"
        android:layout_width="wrap_content"
        android:textColor="@color/colorBlack"
        style="@style/textSizeNormalRegFont"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintTop_toBottomOf="@id/linear_event_details"
        android:text="Lumpers Assigned : "
        android:textStyle="bold"
        android:layout_margin="@dimen/_10ssp"
        android:layout_height="wrap_content" />

    <androidx.recyclerview.widget.RecyclerView
        android:id="@+id/recycler_assigned_lumpers"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:padding="@dimen/_10sdp"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintBottom_toTopOf="@id/button_send"
        android:layout_marginBottom="@dimen/_10sdp"
        app:layout_constraintTop_toBottomOf="@id/text_lumper_heading"/>

    <Button
        android:id="@+id/button_send"
        style="@style/textSizeLargeRegFont"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="@dimen/_20sdp"
        android:layout_marginTop="@dimen/_30sdp"
        android:layout_marginRight="@dimen/_20sdp"
        android:background="@drawable/round_button_red"
        android:fontFamily="@font/poppinsregular"
        android:text="@string/string_send_for_approval"
        android:textAllCaps="false"
        android:layout_marginBottom="@dimen/_10sdp"
        android:textColor="@color/colorWhite"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintBottom_toBottomOf="parent" />
</androidx.constraintlayout.widget.ConstraintLayout>