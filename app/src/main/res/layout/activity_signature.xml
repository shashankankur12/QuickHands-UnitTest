<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".view.activities.SignatureActivity">

    <include
        android:id="@+id/header"
        layout="@layout/layout_header" />

    <LinearLayout
        android:id="@+id/linear_signature"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        app:layout_constraintTop_toBottomOf="@+id/header"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintBottom_toTopOf="@+id/linear_save_sign"/>

    <LinearLayout
        android:id="@+id/linear_save_sign"
        android:layout_width="match_parent"
        android:layout_height="@dimen/_60sdp"
        android:gravity="center"
        android:background="@color/colorGrey"
        app:layout_constraintBottom_toBottomOf="parent">

        <Button
            android:id="@+id/button_save_sign"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:background="@drawable/round_button_red"
            android:text="@string/string_save"
            android:textColor="@color/colorWhite"
            style="@style/textSizeNormalRegFont"
            android:layout_margin="@dimen/_5sdp"
            android:fontFamily="@font/poppinssemibold"
            android:layout_weight="1"/>

        <Button
            android:id="@+id/button_clear"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            style="@style/textSizeNormalRegFont"
            android:textColor="@color/colorAccent"
            android:text="CLEAR"
            android:layout_margin="@dimen/_5sdp"
            android:layout_marginLeft="@dimen/_20sdp"
            android:fontFamily="@font/poppinssemibold"
            android:background="@drawable/round_background_white"/>
    </LinearLayout>

</androidx.constraintlayout.widget.ConstraintLayout>