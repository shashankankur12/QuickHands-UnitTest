<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/relativeLayout"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:paddingTop="@dimen/_5ssp"
    android:paddingBottom="@dimen/_5ssp">

    <TextView
        android:id="@+id/textViewHeader"
        style="@style/titleSmallTextViewTheme"
        android:layout_width="0dp"
        android:text="Container No."
        android:textColor="@color/detailHeader"
        app:layout_constraintEnd_toStartOf="@id/textViewValue"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/textViewValue"
        style="@style/titleSmallTextViewTheme"
        android:layout_width="0dp"
        android:text="3254689"
        android:textColor="@color/textBlack"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toEndOf="@id/textViewHeader"
        app:layout_constraintTop_toTopOf="parent" />

</androidx.constraintlayout.widget.ConstraintLayout>