<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="@dimen/_40sdp"
    android:background="?android:attr/selectableItemBackground"
    android:gravity="start|center_vertical"
    android:orientation="horizontal"
    android:paddingStart="@dimen/_12ssp"
    android:paddingEnd="@dimen/_12ssp">

    <ImageView
        android:id="@+id/list_item_nav_drawer_icon"
        android:layout_width="@dimen/_15sdp"
        android:layout_height="@dimen/_15sdp"
        android:layout_marginEnd="@dimen/_12ssp"
        android:src="@drawable/ic_sidemenu_dashboard" />

    <TextView
        android:id="@+id/list_item_nav_drawer_text"
        style="@style/titleSmallTextViewTheme"
        android:layout_width="0dp"
        android:layout_weight="1"
        android:text="Menu Item"
        android:textColor="@color/textBlack" />
</LinearLayout>