<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@drawable/side_nav_bar"
    android:id="@+id/relative_root"
    android:padding="@dimen/_20sdp"
    android:theme="@style/ThemeOverlay.AppCompat.Dark">

    <ImageView
        android:id="@+id/imageView"
        android:layout_width="@dimen/_150sdp"
        android:layout_height="@dimen/_70sdp"
        android:contentDescription="@string/nav_header_desc"
        android:paddingLeft="@dimen/_10sdp"
        android:paddingTop="@dimen/_5sdp"
        android:paddingRight="@dimen/_10sdp"
        android:paddingBottom="@dimen/_5sdp"
        android:layout_centerHorizontal="true"
        app:srcCompat="@drawable/quickhands_logo" />

    <ImageView
        android:id="@+id/image_profile_logo"
        android:layout_width="@dimen/_30sdp"
        android:layout_height="@dimen/_30sdp"
        android:layout_alignBottom="@+id/textView"
        android:layout_marginTop="@dimen/_70sdp"
        android:layout_marginLeft="@dimen/_10sdp"
        android:contentDescription="@string/nav_header_desc"
        app:srcCompat="@drawable/ic_basic_info_placeholder" />

    <TextView
        android:id="@+id/text_name"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Lead Name"
        android:textStyle="bold"
        android:textColor="@color/colorBlack"
        android:paddingLeft="@dimen/_10sdp"
        android:layout_centerHorizontal="true"
        android:layout_below="@id/imageView"
        android:paddingRight="@dimen/_10sdp"
        android:fontFamily="@font/poppinssemibold"
        android:textAppearance="@style/TextAppearance.AppCompat.Body1" />

    <TextView
        android:id="@+id/textView"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textColor="@color/colorLightGrey"
        android:layout_below="@id/text_name"
        android:layout_alignStart="@+id/text_name"
        style="@style/textSizeSmallRegFont"
        android:fontFamily="@font/poppinsregular"
        android:text="abc@quickhands.com" />

    <TextView
        android:id="@+id/text_employee_id"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textColor="@color/colorLightGrey"
        android:layout_below="@id/textView"
        android:layout_centerHorizontal="true"
        android:gravity="center"
        style="@style/textSizeSmallRegFont"
        android:fontFamily="@font/poppinsregular"
        android:text="Emp ID: 1001" />

    <View
        android:layout_width="match_parent"
        android:layout_height="0.5dp"
        android:layout_marginTop="@dimen/_10sdp"/>

</RelativeLayout>

