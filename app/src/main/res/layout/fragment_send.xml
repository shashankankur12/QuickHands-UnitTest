<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <androidx.constraintlayout.widget.ConstraintLayout
        android:id="@+id/constraintRoot"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        android:padding="@dimen/_10sdp"
        android:background="@drawable/top_left_round_background">

        <TextView
            android:id="@+id/textViewJobHistory"
            style="@style/textSizeLargeRegFont"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:fontFamily="@font/poppinsregular"
            android:layout_marginLeft="@dimen/_15sdp"
            android:layout_marginTop="@dimen/_20sdp"
            app:layout_constraintTop_toTopOf="parent"
            android:textColor="@color/detailHeader"
            android:drawableRight="@drawable/ic_sidemenu_next_arrow_gray"
            app:layout_constraintStart_toStartOf="parent"
            android:text="Job History" />

        <TextView
            android:id="@+id/textViewLumperJobHistory"
            style="@style/textSizeLargeRegFont"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:fontFamily="@font/poppinsregular"
            android:layout_marginLeft="@dimen/_15sdp"
            android:layout_marginTop="@dimen/_10sdp"
            android:drawableRight="@drawable/ic_sidemenu_next_arrow_gray"
            app:layout_constraintTop_toBottomOf="@+id/textViewJobHistory"
            android:textColor="@color/detailHeader"
            app:layout_constraintStart_toStartOf="parent"
            android:text="Lumper Job History" />

    </androidx.constraintlayout.widget.ConstraintLayout>
</androidx.constraintlayout.widget.ConstraintLayout>