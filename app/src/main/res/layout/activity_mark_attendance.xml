<?xml version="1.0" encoding="utf-8"?>
<androidx.coordinatorlayout.widget.CoordinatorLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".modified.views.activities.schedule.MarkAttendanceActivity">

    <include layout="@layout/layout_toolbar" />

    <include layout="@layout/content_mark_attendance" />

    <View
        android:id="@+id/bottomSheetBackground"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@color/fabBackgroundOverlay"
        android:visibility="gone" />

    <!-- Adding bottom sheet after main content -->
    <include layout="@layout/bottom_sheet_add_time" />

</androidx.coordinatorlayout.widget.CoordinatorLayout>