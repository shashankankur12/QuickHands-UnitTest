<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@drawable/dialog_background"
    android:orientation="vertical">

    <TextView
        android:id="@+id/text_message"
        android:textColor="@color/textBlack"
        android:textSize="@dimen/_14ssp"
        android:textStyle="bold"
        android:text="@string/string_ask_new_lumper"
        android:layout_width="@dimen/_250sdp"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:layout_marginTop="@dimen/_10sdp"
        android:gravity="center"
        android:padding="@dimen/_5sdp" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="@dimen/_14sdp"
        android:orientation="horizontal">

        <Button
            android:id="@+id/text_yes"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginEnd="@dimen/_7sdp"
            android:layout_weight="1"
            android:background="@drawable/round_button_red_new"
            android:text="@string/string_yes"
            android:textAllCaps="false"
            android:textColor="@color/colorWhite"
            android:textSize="@dimen/_14ssp" />

        <Button
            android:id="@+id/text_no"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginStart="@dimen/_7sdp"
            android:layout_weight="1"
            android:background="@drawable/round_button_negative"
            android:text="@string/string_no"
            android:textAllCaps="false"
            android:textColor="@color/textBlack"
            android:textSize="@dimen/_14ssp"/>
    </LinearLayout>
</LinearLayout>