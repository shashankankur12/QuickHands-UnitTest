<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/mainConstraintLayout"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/appBackground"
    tools:context=".modified.views.workSheet.WorkSheetFragment">

    <com.quickhandslogistics.modified.controls.CustomTextView
        android:id="@+id/textViewBuildingName"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginStart="@dimen/_15ssp"
        android:layout_marginTop="@dimen/_5ssp"
        android:layout_marginEnd="@dimen/_10ssp"
        android:textColor="@color/buildingTitle"
        android:textSize="@dimen/_16ssp"
        android:textStyle="bold"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <com.quickhandslogistics.modified.controls.CustomTextView
        android:id="@+id/textViewWorkItemsDate"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginStart="@dimen/_15ssp"
        android:layout_marginTop="@dimen/_8sdp"
        android:layout_marginEnd="@dimen/_10ssp"
        android:drawableStart="@drawable/ic_schedule_calendar"
        android:drawablePadding="@dimen/_5sdp"
        android:textColor="@color/scheduleDetail"
        android:textSize="@dimen/_12ssp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/textViewBuildingName" />

    <com.quickhandslogistics.modified.controls.CustomTextView
        android:id="@+id/textViewTotalCount"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginStart="@dimen/_15ssp"
        android:layout_marginTop="@dimen/_4sdp"
        android:layout_marginEnd="@dimen/_10ssp"
        android:drawableStart="@drawable/ic_schedule_type"
        android:drawablePadding="@dimen/_5sdp"
        android:textColor="@color/scheduleDetail"
        android:textSize="@dimen/_12ssp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/textViewWorkItemsDate" />

    <com.google.android.flexbox.FlexboxLayout
        android:id="@+id/flexboxLayoutCounts"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginStart="@dimen/_15ssp"
        android:layout_marginEnd="@dimen/_15ssp"
        app:flexWrap="wrap"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/textViewTotalCount">

        <com.quickhandslogistics.modified.controls.CustomTextView
            android:id="@+id/textViewDropsCount"
            style="@style/blueChipTheme"
            android:layout_marginTop="@dimen/_8sdp" />

        <com.quickhandslogistics.modified.controls.CustomTextView
            android:id="@+id/textViewLiveLoadsCount"
            style="@style/blueChipTheme"
            android:layout_marginStart="@dimen/_4ssp"
            android:layout_marginTop="@dimen/_8sdp"
            android:layout_marginEnd="@dimen/_4ssp" />

        <com.quickhandslogistics.modified.controls.CustomTextView
            android:id="@+id/textViewOutBoundsCount"
            style="@style/blueChipTheme"
            android:layout_marginTop="@dimen/_8sdp" />
    </com.google.android.flexbox.FlexboxLayout>

    <View
        android:layout_width="match_parent"
        android:layout_height="80dp"
        android:background="@drawable/shadow_effect"
        android:translationY="-15dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="@+id/relativeLayout" />

    <LinearLayout
        android:id="@+id/relativeLayout"
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:layout_marginTop="@dimen/_15sdp"
        android:background="@drawable/top_left_round_background"
        android:gravity="center_horizontal"
        android:orientation="vertical"
        android:paddingStart="@dimen/_15ssp"
        android:paddingTop="@dimen/_4ssp"
        android:paddingEnd="@dimen/_15ssp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/flexboxLayoutCounts">

        <com.google.android.material.tabs.TabLayout
            android:id="@+id/tabLayoutWorkSheet"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            app:tabIndicatorColor="@color/buttonRed"
            app:tabIndicatorFullWidth="false"
            app:tabMode="scrollable"
            app:tabSelectedTextColor="@color/textBlack"
            app:tabTextAppearance="@style/TabTextAppearance"
            app:tabTextColor="@color/detailHeader" />

        <View
            android:id="@+id/divider"
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:background="@color/greyDivider" />

        <androidx.viewpager.widget.ViewPager
            android:id="@+id/viewPagerWorkSheet"
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_marginTop="@dimen/_5sdp"
            android:layout_weight="1"
            app:layout_behavior="@string/appbar_scrolling_view_behavior" />
    </LinearLayout>
</androidx.constraintlayout.widget.ConstraintLayout>