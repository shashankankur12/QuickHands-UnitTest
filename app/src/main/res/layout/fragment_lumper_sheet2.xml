<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:shimmer="http://schemas.android.com/tools"
    android:id="@+id/constraint_root"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <EditText
        android:id="@+id/edit_search_lumper"
        style="@style/textSizeNormalRegFont"
        android:layout_width="@dimen/_260sdp"
        android:layout_height="wrap_content"
        android:layout_margin="@dimen/_10sdp"
        android:background="@drawable/edit_search_bg"
        android:drawableLeft="@drawable/ic_search_black_24dp"
        android:drawablePadding="@dimen/_2sdp"
        android:drawableTint="@color/colorLightGrey"
        android:fontFamily="@font/poppinssemibold"
        android:hint="@string/string_search"
        android:imeOptions="actionDone"
        android:singleLine="true"
        android:paddingRight="@dimen/_25sdp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <ImageView
        android:id="@+id/image_cancel"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:src="@drawable/ic_cancel_black_24dp"
        app:layout_constraintTop_toTopOf="parent"
        android:layout_marginTop="@dimen/_8sdp"
        android:tint="@color/colorLightGrey"
        android:visibility="gone"
        android:layout_marginRight="@dimen/_5sdp"
        app:layout_constraintEnd_toEndOf="@id/edit_search_lumper"
        app:layout_constraintBottom_toBottomOf="@+id/edit_search_lumper" />

    <ImageView
        android:id="@+id/image_filter"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:src="@drawable/filter"
        app:layout_constraintTop_toTopOf="parent"
        android:layout_marginTop="@dimen/_8sdp"
        app:layout_constraintBottom_toBottomOf="@+id/edit_search_lumper"
        app:layout_constraintStart_toEndOf="@id/edit_search_lumper"
        app:layout_constraintEnd_toEndOf="parent"/>

    <androidx.recyclerview.widget.RecyclerView
        android:id="@+id/recycler_lumper_sheet"
        android:layout_width="match_parent"
        android:layout_marginTop="@dimen/_8sdp"
        app:layout_constraintTop_toBottomOf="@+id/edit_search_lumper"
        android:layoutAnimation="@anim/recycler_anim"
        android:layout_height="0dp"
        app:layout_constraintBottom_toBottomOf="parent"/>

    <TextView
        android:id="@+id/text_no_record_found"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="No Record Found"
        android:visibility="gone"
        style="@style/textSizeNormalRegFont"
        android:fontFamily="@font/poppinssemibold"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"/>

    <com.google.android.material.floatingactionbutton.FloatingActionButton
        android:id="@+id/fab_show_lumper"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_margin="@dimen/_10sdp"
        android:src="@android:drawable/ic_input_add"
        android:tint="@color/colorWhite"
        app:backgroundTint="@color/colorPrimary"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintRight_toRightOf="parent" />


</androidx.constraintlayout.widget.ConstraintLayout>