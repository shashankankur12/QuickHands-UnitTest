<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/constraint_root_item"
    android:background="?android:attr/selectableItemBackground"
    android:orientation="vertical"
    android:paddingTop="@dimen/_10ssp"
    android:paddingBottom="@dimen/_10ssp"
    xmlns:android="http://schemas.android.com/apk/res/android">

        <TextView
            android:id="@+id/text_container_number"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginStart="@dimen/_8sdp"
            android:layout_marginEnd="@dimen/_8sdp"
            android:text="@string/container_number"
            android:textStyle="bold"
            android:textSize="@dimen/_14ssp"
            android:textColor="@color/textBlack"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent"  />

    <TextView
        android:id="@+id/input_container_number"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginEnd="@dimen/_8sdp"
        android:text="3254689"
        android:textStyle="bold"
        android:textSize="@dimen/_14ssp"
        android:textColor="@color/textBlack"
        app:layout_constraintEnd_toStartOf="@id/linear_arrow"
        app:layout_constraintStart_toEndOf="@+id/text_container_number"
        app:layout_constraintTop_toTopOf="parent"/>

    <TextView
        android:id="@+id/textViewContainerItem"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginStart="@dimen/_8sdp"
        android:layout_marginTop="@dimen/_5sdp"
        android:layout_marginEnd="@dimen/_8sdp"
        android:text="Container Item"
        android:textColor="@color/detailHeader"
        android:textSize="@dimen/_12ssp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/input_container_number" />

        <TextView
            android:id="@+id/textViewHeadingWeight"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:text="@string/weight"
            android:layout_marginStart="@dimen/_8sdp"
            android:layout_marginTop="@dimen/_5sdp"
            android:layout_marginEnd="@dimen/_8sdp"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/textViewContainerItem" />

    <TextView
        android:id="@+id/textViewHeadingTime"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:text="Time"
        android:layout_marginStart="@dimen/_8sdp"
        android:layout_marginTop="@dimen/_5sdp"
        android:layout_marginEnd="@dimen/_8sdp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/textViewHeadingWeight" />

        <LinearLayout
            android:id="@+id/linear_arrow"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginEnd="@dimen/_8sdp"
            android:orientation="horizontal"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintLeft_toRightOf="@+id/input_container_number"
            app:layout_constraintTop_toTopOf="parent">

            <de.hdodenhof.circleimageview.CircleImageView
                android:id="@+id/image_arrow"
                android:layout_width="@dimen/_22sdp"
                android:layout_height="@dimen/_22sdp"
                android:src="@drawable/ic_arrow_right"
                app:civ_border_color="@color/circleBackground"
                app:civ_border_width="@dimen/_1sdp"
                app:civ_circle_background_color="@color/circleBackground" />

        </LinearLayout>

        <LinearLayout
            android:id="@+id/linear_Doors"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginEnd="@dimen/_8sdp"
            android:layout_marginTop="@dimen/_5sdp"
            android:orientation="horizontal"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintLeft_toRightOf="@+id/textViewContainerItem"
            app:layout_constraintTop_toBottomOf="@+id/linear_arrow">

            <TextView
                android:id="@+id/textViewDoor"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textSize="@dimen/_12ssp"
                android:textStyle="bold"
                android:textColor="@color/textBlack"
                android:text="7 Doors" />
        </LinearLayout>

        <LinearLayout
            android:id="@+id/linear_weight"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/_5sdp"
            android:layout_marginEnd="@dimen/_8sdp"
            android:orientation="horizontal"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintLeft_toRightOf="@+id/textViewHeadingWeight"
            app:layout_constraintTop_toBottomOf="@+id/linear_Doors">

            <TextView
                android:id="@+id/textViewWeight"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textSize="@dimen/_12ssp"
                android:textStyle="bold"
                android:textColor="@color/textBlack"
                android:text="300 kg" />
        </LinearLayout>

        <LinearLayout
            android:id="@+id/linear_time"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/_5sdp"
            android:layout_marginEnd="@dimen/_8sdp"
            android:orientation="horizontal"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintLeft_toRightOf="@+id/textViewHeadingTime"
            app:layout_constraintTop_toBottomOf="@+id/linear_weight">

            <TextView
                android:id="@+id/textViewTime"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textSize="@dimen/_12ssp"
                android:textStyle="bold"
                android:textColor="@color/textBlack"
                android:text="9:00am-2:30pm" />
        </LinearLayout>
    </androidx.constraintlayout.widget.ConstraintLayout>
