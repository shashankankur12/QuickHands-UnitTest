<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="@dimen/_80sdp"
    app:cardCornerRadius="@dimen/_5sdp"
    android:layout_marginLeft="@dimen/_10sdp"
    android:layout_marginRight="@dimen/_10sdp"
    android:layout_marginTop="@dimen/_10sdp"
    android:elevation="@dimen/_5sdp">

    <androidx.constraintlayout.widget.ConstraintLayout
        android:id="@+id/constraint_root"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="?android:attr/selectableItemBackground"
        android:orientation="vertical">

        <ImageView
            android:id="@+id/image_lumper_logo"
            android:layout_width="@dimen/_50sdp"
            android:layout_height="@dimen/_40sdp"
            android:layout_marginLeft="@dimen/_10sdp"
            android:layout_marginRight="@dimen/_10sdp"
            android:src="@drawable/ic_basic_info_placeholder"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintTop_toTopOf="parent" />

        <TextView
            android:id="@+id/text_lumper"
            style="@style/textSizeNormalRegFont"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginLeft="@dimen/_10sdp"
            android:fontFamily="@font/poppinssemibold"
            android:textColor="@color/colorBlack"
            android:singleLine="true"
            android:includeFontPadding="false"
            app:layout_constraintTop_toTopOf="parent"
            android:layout_marginTop="@dimen/_15sdp"
            app:layout_constraintRight_toLeftOf="@id/image_phone"
            app:layout_constraintLeft_toRightOf="@+id/image_lumper_logo" />

        <TextView
            android:id="@+id/text_last_name"
            style="@style/textSizeSmallRegFont"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:fontFamily="@font/poppinsregular"
            android:singleLine="true"
            android:text="Emp ID: 1001"
            android:includeFontPadding="false"
            android:textColor="@color/colorBlack"
            app:layout_constraintRight_toLeftOf="@id/image_phone"
            app:layout_constraintLeft_toLeftOf="@id/text_lumper"
            app:layout_constraintTop_toBottomOf="@id/text_lumper"/>

        <TextView
            android:id="@+id/text_shift_hours"
            style="@style/textSizeSmallRegFont"
            android:layout_width="0dp"
            android:textStyle="italic"
            android:layout_height="wrap_content"
            android:fontFamily="@font/poppinsregular"
            android:singleLine="true"
            android:text="Shift Hours: 9:00 am to 6:00 pm"
            android:paddingTop="@dimen/_3sdp"
            android:paddingBottom="@dimen/_3sdp"
            android:includeFontPadding="false"
            android:textColor="@color/colorBlack"
            app:layout_constraintRight_toLeftOf="@id/image_phone"
            app:layout_constraintLeft_toLeftOf="@id/text_lumper"
            app:layout_constraintTop_toBottomOf="@id/text_last_name"/>

        <ImageView
            android:id="@+id/image_phone"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:src="@drawable/ic_phone_call"
            android:tint="@color/colorBlue"
            android:layout_marginRight="@dimen/_20sdp"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintLeft_toRightOf="@+id/text_lumper"
            app:layout_constraintTop_toTopOf="parent" />

    </androidx.constraintlayout.widget.ConstraintLayout>
</androidx.cardview.widget.CardView>
