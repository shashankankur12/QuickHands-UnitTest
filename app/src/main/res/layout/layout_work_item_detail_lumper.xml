<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="?android:attr/selectableItemBackground"
    android:orientation="vertical"
    android:paddingTop="@dimen/_10ssp"
    android:paddingBottom="@dimen/_10ssp">

    <de.hdodenhof.circleimageview.CircleImageView
        android:id="@+id/circleImageViewProfile"
        android:layout_width="@dimen/_35sdp"
        android:layout_height="@dimen/_35sdp"
        android:contentDescription="@string/nav_header_desc"
        android:src="@drawable/ic_basic_info_placeholder"
        app:civ_border_color="@color/imageBorder"
        app:civ_border_width="1dp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <View
        android:id="@+id/viewAttendanceStatus"
        android:layout_width="@dimen/_8sdp"
        android:layout_height="@dimen/_8sdp"
        android:background="@drawable/online_dot"
        android:translationX="-2dp"
        app:layout_constraintBottom_toBottomOf="@+id/circleImageViewProfile"
        app:layout_constraintEnd_toEndOf="@+id/circleImageViewProfile" />

    <TextView
        android:id="@+id/textViewLumperName"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginStart="@dimen/_10sdp"
        android:layout_marginEnd="@dimen/_5sdp"
        android:text="John Snow"
        android:textColor="@color/textBlack"
        android:textSize="@dimen/_14ssp"
        android:textStyle="bold"
        app:layout_constraintStart_toEndOf="@+id/circleImageViewProfile"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/textViewEmployeeId"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginStart="@dimen/_10sdp"
        android:layout_marginTop="@dimen/_2sdp"
        android:layout_marginEnd="@dimen/_10sdp"
        android:text="(Emp ID: 1001)"
        android:textColor="@color/textBlack"
        android:textSize="@dimen/_10ssp"
        app:layout_constraintStart_toEndOf="@+id/circleImageViewProfile"
        app:layout_constraintTop_toBottomOf="@+id/textViewLumperName" />

    <LinearLayout
        android:id="@+id/linearLayoutLumperTime"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:visibility="visible"
        app:layout_constraintEnd_toStartOf="@+id/textViewAddTime"
        app:layout_constraintStart_toEndOf="@id/circleImageViewProfile"
        app:layout_constraintTop_toBottomOf="@id/textViewEmployeeId">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="@dimen/_10sdp"
            android:layout_marginTop="@dimen/_4sdp"
            android:layout_marginEnd="@dimen/_10sdp"
            android:text="Shift Time"
            android:textColor="@color/detailHeader"
            android:textSize="@dimen/_10ssp"
            app:layout_constraintEnd_toStartOf="@id/switchAttendance"
            app:layout_constraintStart_toEndOf="@+id/circleImageViewProfile"
            app:layout_constraintTop_toBottomOf="@+id/textViewLumperName" />

        <TextView
            android:id="@+id/textViewShiftTime"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="@dimen/_10sdp"
            android:layout_marginTop="@dimen/_2sdp"
            android:layout_marginEnd="@dimen/_10sdp"
            android:drawableStart="@drawable/ic_lumper_list_clock"
            android:drawablePadding="@dimen/_5sdp"
            android:gravity="center_vertical"
            android:text="10:00 pm - 00:00 am"
            android:textColor="@color/textBlack"
            android:textSize="@dimen/_10ssp"
            android:textStyle="bold" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="@dimen/_10sdp"
            android:layout_marginTop="@dimen/_5sdp"
            android:layout_marginEnd="@dimen/_10sdp"
            android:text="Lunch Time"
            android:textColor="@color/detailHeader"
            android:textSize="@dimen/_10ssp" />

        <TextView
            android:id="@+id/textViewLunchTime"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="@dimen/_10sdp"
            android:layout_marginTop="@dimen/_2sdp"
            android:layout_marginEnd="@dimen/_10sdp"
            android:drawableStart="@drawable/ic_lumper_list_clock"
            android:drawablePadding="@dimen/_5sdp"
            android:gravity="center_vertical"
            android:text="10:00 pm - 00:00 am"
            android:textColor="@color/textBlack"
            android:textSize="@dimen/_10ssp"
            android:textStyle="bold" />

    </LinearLayout>

    <RelativeLayout
        android:id="@+id/layout"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent">

        <Button
            android:id="@+id/buttonReplace"
            android:layout_width="wrap_content"
            android:layout_height="@dimen/_30ssp"
            android:background="@drawable/round_button_red_new"
            android:text="@string/replace"
            android:textAllCaps="false"
            android:textColor="@color/colorWhite"
            android:textSize="@dimen/_12ssp"
            android:visibility="visible" />

        <TextView
            android:id="@+id/textViewReplaced"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:gravity="center_horizontal"
            android:text="@string/replacementRequested"
            android:textColor="@color/buttonRed"
            android:textSize="@dimen/_12ssp"
            android:textStyle="bold"
            android:visibility="gone" />

    </RelativeLayout>
</androidx.constraintlayout.widget.ConstraintLayout>
