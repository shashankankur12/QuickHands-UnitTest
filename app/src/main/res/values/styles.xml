<resources>

    <style name="AppTheme" parent="Theme.AppCompat.Light.DarkActionBar">
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
        <item name="windowActionBar">false</item>
        <item name="windowNoTitle">true</item>
        <item name="actionOverflowButtonStyle">@style/MyOverflowButtonStyle</item>
    </style>

    <style name="AppTheme.AppBarOverlay" parent="ThemeOverlay.AppCompat.Dark.ActionBar" />

    <style name="AppTheme.PopupOverlay" parent="ThemeOverlay.AppCompat.Light" />

    <style name="MyOverflowButtonStyle" parent="Widget.AppCompat.ActionButton.Overflow">
        <item name="android:tint">@color/textBlack</item>
    </style>

    <style name="dialogAnimation">
        <item name="android:windowEnterAnimation">@anim/anim_slide_up</item>
        <item name="android:windowExitAnimation">@anim/anim_slide_down</item>
    </style>

    <style name="detailTextHeader">
        <item name="android:textSize">@dimen/_12ssp</item>
        <item name="android:textColor">@color/detailHeader</item>
    </style>

    <style name="detailTextValue">
        <item name="android:textSize">@dimen/_14ssp</item>
        <item name="android:textStyle">bold</item>
        <item name="android:textColor">@color/textBlack</item>
    </style>

    <style name="TabTextAppearance" parent="TextAppearance.Design.Tab">
        <item name="textAllCaps">false</item>
        <item name="android:textSize">@dimen/_13ssp</item>
    </style>

    <style name="ToolbarTitleTextAppearance" parent="TextAppearance.Widget.AppCompat.Toolbar.Title">
        <item name="android:textSize">@dimen/_16ssp</item>
    </style>

    <!--Main Button Styles-->
    <style name="baseButtonTheme" parent="Widget.AppCompat.Button">
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_width">match_parent</item>
        <item name="android:textAllCaps">false</item>
        <item name="android:textColor">@android:color/white</item>
        <item name="android:textSize">@dimen/_15ssp</item>
        <item name="android:paddingTop">@dimen/_4sdp</item>
        <item name="android:paddingBottom">@dimen/_4sdp</item>
    </style>

    <style name="positiveRoundButtonTheme" parent="baseButtonTheme">
        <item name="android:background">@drawable/round_button_red_selector</item>
    </style>

    <style name="negativeRoundButtonTheme" parent="baseButtonTheme">
        <item name="android:textColor">@color/button_negative_selector</item>
        <item name="android:background">@drawable/round_button_negative_selector</item>
    </style>

    <style name="positiveButtonTheme" parent="baseButtonTheme">
        <item name="android:background">@drawable/button_red_selector</item>
        <item name="android:padding">@dimen/_10ssp</item>
        <item name="android:layout_width">wrap_content</item>
    </style>
    <!---->

    <!--Chip TextView Styles-->
    <style name="baseChipTheme" parent="Widget.AppCompat.TextView">
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_width">wrap_content</item>
        <item name="android:textColor">@android:color/white</item>
        <item name="android:textSize">@dimen/_10ssp</item>
        <item name="android:textStyle">bold</item>
        <item name="android:paddingTop">@dimen/_5ssp</item>
        <item name="android:paddingBottom">@dimen/_5ssp</item>
        <item name="android:paddingEnd">@dimen/_10ssp</item>
        <item name="android:paddingStart">@dimen/_10ssp</item>
    </style>

    <style name="blueChipTheme" parent="baseChipTheme">
        <item name="android:textSize">@dimen/_12ssp</item>
        <item name="android:background">@drawable/chip_background</item>
    </style>
    <!---->

    <!--EditText Styles-->
    <style name="loginEditTextTheme" parent="Widget.AppCompat.EditText">
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_width">match_parent</item>
        <item name="android:background">@drawable/edittext_background</item>
        <item name="android:drawablePadding">@dimen/_10sdp</item>
        <item name="android:paddingTop">@dimen/_10ssp</item>
        <item name="android:paddingBottom">@dimen/_10ssp</item>
        <item name="android:paddingEnd">@dimen/_14ssp</item>
        <item name="android:paddingStart">@dimen/_14ssp</item>
        <item name="android:textSize">@dimen/_12ssp</item>
        <item name="android:textColor">@color/textBlack</item>
    </style>
</resources>
