<resources>

    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.Light.DarkActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
        <item name="drawerArrowStyle">@style/DrawerArrowStyle</item>
        <item name="windowActionBar">false</item>
        <item name="windowNoTitle">true</item>
    </style>

    <style name="AppTheme.AppBarOverlay" parent="ThemeOverlay.AppCompat.Dark.ActionBar" />

    <style name="AppTheme.PopupOverlay" parent="ThemeOverlay.AppCompat.Light" />

    <!-- TextSizes regular-->
    <style name="textSizeExtraSmallRegFont">
        <item name="android:textSize">@dimen/_8ssp</item>
        <item name="android:fontFamily">@font/poppinsregular</item>
    </style>

    <style name="textSizeExtraMaxSmallRegFont">
        <item name="android:textSize">@dimen/_6ssp</item>
        <item name="android:fontFamily">@font/poppinsregular</item>
    </style>

    <style name="textSizeSmallRegFont">
        <item name="android:textSize">@dimen/_10ssp</item>
        <item name="android:fontFamily">@font/poppinsregular</item>
    </style>

    <style name="textSizeNormalRegFont">
        <item name="android:textSize">@dimen/_12ssp</item>
        <item name="android:fontFamily">@font/poppinssemibold</item>
    </style>

    <style name="textSizeLargeRegFont">
        <item name="android:textSize">@dimen/_14ssp</item>
        <item name="android:fontFamily">@font/poppinsregular</item>
    </style>

    <style name="textSizeExtraLargeRegFont">
        <item name="android:textSize">@dimen/_16ssp</item>
        <item name="android:fontFamily">@font/poppinsregular</item>
    </style>

    <!-- TextSizes SemiBold-->
    <style name="textSizeExtraSmallSemiBold">
        <item name="android:textSize">@dimen/_8ssp</item>
        <item name="android:fontFamily">@font/poppinssemibold</item>
    </style>

    <style name="textSizeSmallSemiBold">
        <item name="android:textSize">@dimen/_10ssp</item>
        <item name="android:fontFamily">@font/poppinssemibold</item>
    </style>

    <style name="textSizeNormalSemiBold">
        <item name="android:textSize">@dimen/_12ssp</item>
        <item name="android:fontFamily">@font/poppinssemibold</item>
    </style>

    <style name="textSizeLargeSemiBold">
        <item name="android:textSize">@dimen/_14ssp</item>
        <item name="android:fontFamily">@font/poppinssemibold</item>
    </style>

    <style name="textSizeExtraLargeSemiBold">
        <item name="android:textSize">@dimen/_16ssp</item>
        <item name="android:fontFamily">@font/poppinssemibold</item>
    </style>

    <style name="TitleBarTextAppearance" parent="android:TextAppearance">
        <item name="android:fontFamily">@font/poppinsregular</item>
        <item name="android:textSize">@dimen/_14ssp</item>
        <item name="android:textColor">@android:color/white</item>
    </style>

    <style name="navTextViewStyle" parent="android:Widget.TextView">
        <item name="android:fontFamily">@font/poppins_medium</item>
        <item name="android:textSize">@dimen/_12ssp</item>

    </style>

    <style name="TextInputLabel" parent="Widget.Design.TextInputLayout">
        <item name="android:textSize">@dimen/_10ssp</item>
        <item name="android:fontFamily">@font/poppinsregular</item>
        <item name="android:textColorHint">@color/colorHint</item>
        <item name="android:textColor">@color/colorBlack</item>
        <item name="colorAccent">@color/colorPrimaryDark</item>
        <item name="colorControlNormal">@color/colorHint</item>
        <item name="colorControlActivated">@color/colorPrimary</item>
    </style>


    <style name="edit_text_size_smaller" parent="@android:style/Widget.EditText">
        <item name="android:textSize">@dimen/_12ssp</item>
    </style>

    <style name="dialogAnimation">
        <item name="android:windowEnterAnimation">@anim/anim_slide_up</item>
        <item name="android:windowExitAnimation">@anim/anim_slide_down</item>
    </style>

    <style name="DrawerArrowStyle" parent="@style/Widget.AppCompat.DrawerArrowToggle">
        <item name="spinBars">true</item>
        <item name="drawableSize">@dimen/_30sdp</item>
    </style>

    <style name="detailTextHeader">
        <item name="android:textSize">@dimen/_12ssp</item>
        <item name="android:textColor">@color/detailHeader</item>
    </style>

    <style name="detailTextValue">
        <item name="android:textSize">@dimen/_14ssp</item>
        <item name="android:textStyle">bold</item>
        <item name="android:textColor">@android:color/black</item>
    </style>
</resources>
