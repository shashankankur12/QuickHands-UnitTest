<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/mainConstraintLayout"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/appBackground"
    tools:context=".views.workSheet.WorkSheetFragment">

    <include layout="@layout/content_work_sheet" />

    <View
        android:id="@+id/bottomSheetBackground"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@color/fabBackgroundOverlay"
        android:visibility="gone" />

    <!-- Adding bottom sheet after main content -->
    <include layout="@layout/bottom_work_sheet_item" />

</androidx.constraintlayout.widget.ConstraintLayout>