<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/white_background"
    android:padding="@dimen/_4sdp">

    <TextView
        android:id="@+id/textViewJobHistory"
        style="@style/titleTextViewTheme"
        android:layout_width="0dp"
        android:background="?android:attr/selectableItemBackground"
        android:drawableEnd="@drawable/ic_arrow_right"
        android:padding="@dimen/_6sdp"
        android:text="@string/job_history"
        android:textColor="@color/textBlack"
        android:visibility="gone"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/textViewLumperJobHistory"
        style="@style/titleTextViewTheme"
        android:layout_width="0dp"
        android:background="?android:attr/selectableItemBackground"
        android:drawableEnd="@drawable/ic_arrow_right"
        android:padding="@dimen/_6sdp"
        android:text="@string/lumper_job_history"
        android:textColor="@color/textBlack"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/textViewJobHistory" />
</androidx.constraintlayout.widget.ConstraintLayout>