<resources>

    <style name="detailTextHeader"> <!--Changed-->
        <item name="android:textSize">@dimen/_10ssp</item>
        <item name="android:textColor">@color/detailHeader</item>
    </style>

    <style name="detailTextValue"> <!--Changed-->
        <item name="android:textSize">@dimen/_12ssp</item>
        <item name="android:textStyle">bold</item>
        <item name="android:textColor">@color/textBlack</item>
    </style>

    <style name="TabTextAppearance" parent="TextAppearance.Design.Tab"> <!--Changed-->
        <item name="textAllCaps">false</item>
        <item name="android:textSize">@dimen/_11ssp</item>
    </style>

    <style name="ToolbarTitleTextAppearance" parent="TextAppearance.Widget.AppCompat.Toolbar.Title"> <!--Changed-->
        <item name="android:textSize">@dimen/_13ssp</item>
    </style>

    <!--Main Button Styles-->
    <style name="baseButtonTheme" parent="Widget.AppCompat.Button"> <!--Changed-->
        <item name="android:layout_height">@dimen/_30sdp</item>
        <item name="android:layout_width">match_parent</item>
        <item name="android:textAllCaps">false</item>
        <item name="android:textColor">@android:color/white</item>
        <item name="android:textSize">@dimen/_12ssp</item>
        <item name="android:paddingTop">@dimen/_4sdp</item>
        <item name="android:paddingBottom">@dimen/_4sdp</item>
    </style>

    <style name="positiveRoundButtonTheme" parent="baseButtonTheme">
        <item name="android:background">@drawable/round_button_red_selector</item>
    </style>

    <style name="negativeRoundButtonTheme" parent="baseButtonTheme">
        <item name="android:textColor">@color/button_negative_selector</item>
        <item name="android:background">@drawable/round_button_negative_selector</item>
    </style>

    <style name="positiveButtonTheme" parent="baseButtonTheme"> <!--Changed-->
        <item name="android:background">@drawable/button_red_selector</item>
        <item name="android:padding">@dimen/_6ssp</item>
        <item name="android:layout_width">wrap_content</item>
    </style>
    <!---->

    <!--Chip TextView Styles-->
    <style name="baseChipTheme" parent="Widget.AppCompat.TextView"> <!--Changed-->
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_width">wrap_content</item>
        <item name="android:textColor">@android:color/white</item>
        <item name="android:textSize">@dimen/_8ssp</item>
        <item name="android:textStyle">bold</item>
        <item name="android:paddingTop">@dimen/_4ssp</item>
        <item name="android:paddingBottom">@dimen/_4ssp</item>
        <item name="android:paddingEnd">@dimen/_8ssp</item>
        <item name="android:paddingStart">@dimen/_8ssp</item>
    </style>

    <style name="blueChipTheme" parent="baseChipTheme"> <!--Changed-->
        <item name="android:textSize">@dimen/_10ssp</item>
        <item name="android:background">@drawable/chip_background</item>
    </style>
    <!---->

    <!--EditText Styles-->
    <style name="loginEditTextTheme" parent="Widget.AppCompat.EditText"> <!--Changed-->
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_width">match_parent</item>
        <item name="android:background">@drawable/edittext_background</item>
        <item name="android:drawablePadding">@dimen/_8sdp</item>
        <item name="android:paddingTop">@dimen/_8ssp</item>
        <item name="android:paddingBottom">@dimen/_8ssp</item>
        <item name="android:paddingEnd">@dimen/_12ssp</item>
        <item name="android:paddingStart">@dimen/_12ssp</item>
        <item name="android:textSize">@dimen/_10ssp</item>
        <item name="android:textColor">@color/textBlack</item>
    </style>

    <style name="searchEditTextTheme" parent="Widget.AppCompat.EditText"> <!--Changed-->
        <item name="android:layout_height">wrap_content</item>
        <item name="android:background">@drawable/edit_search_bg</item>
        <item name="android:drawableStart">@drawable/ic_search</item>
        <item name="android:drawablePadding">@dimen/_4sdp</item>
        <item name="android:hint">@string/search_by_name</item>
        <item name="android:imeOptions">actionDone</item>
        <item name="android:inputType">textPersonName</item>
        <item name="android:paddingTop">@dimen/_5sdp</item>
        <item name="android:paddingBottom">@dimen/_5sdp</item>
        <item name="android:paddingEnd">@dimen/_25sdp</item>
        <item name="android:paddingStart">@dimen/_4sdp</item>
        <item name="android:textColor">@color/textBlack</item>
        <item name="android:textSize">@dimen/_10ssp</item>
    </style>

    <style name="valueEditTextTheme" parent="Widget.AppCompat.EditText"> <!--Changed-->
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_marginTop">@dimen/_2sdp</item>
        <item name="android:backgroundTint">@color/buildingTitle</item>
        <item name="android:inputType">textPersonName|textCapWords</item>
        <item name="android:textColor">@color/scheduleDetail</item>
        <item name="android:textSize">@dimen/_10ssp</item>
        <item name="android:textCursorDrawable">@drawable/color_cursor</item>
    </style>
    <!---->

    <!--TextView Styles-->
    <style name="titleTextViewTheme" parent="Widget.AppCompat.TextView"> <!--Changed-->
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:textColor">@color/buildingTitle</item>
        <item name="android:textSize">@dimen/_12ssp</item>
        <item name="android:textStyle">bold</item>
    </style>

    <style name="titleBigTextViewTheme" parent="titleTextViewTheme"> <!--Changed-->
        <item name="android:textSize">@dimen/_14ssp</item>
    </style>

    <style name="titleSmallTextViewTheme" parent="titleTextViewTheme"> <!--Changed-->
        <item name="android:textSize">@dimen/_10ssp</item>
    </style>

    <style name="titleVerySmallTextViewTheme" parent="titleTextViewTheme"> <!--Changed-->
        <item name="android:textSize">@dimen/_8ssp</item>
    </style>

    <style name="valuesTextViewTheme" parent="Widget.AppCompat.TextView"> <!--Changed-->
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:textColor">@color/scheduleDetail</item>
        <item name="android:textSize">@dimen/_10ssp</item>
    </style>

    <style name="valuesSmallTextViewTheme" parent="valuesTextViewTheme"> <!--Changed-->
        <item name="android:textSize">@dimen/_8ssp</item>
    </style>

    <style name="valuesBigTextViewTheme" parent="valuesTextViewTheme"> <!--Changed-->
        <item name="android:textSize">@dimen/_12ssp</item>
    </style>

    <style name="noRecordTextViewTheme" parent="Widget.AppCompat.TextView"> <!--Changed-->
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:textColor">@color/textBlack</item>
        <item name="android:textSize">@dimen/_10ssp</item>
        <item name="android:text">@string/string_no_record_found</item>
    </style>

    <style name="addTextViewTheme" parent="Widget.AppCompat.TextView"> <!--Changed-->
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:background">?android:attr/selectableItemBackground</item>
        <item name="android:clickable">true</item>
        <item name="android:drawableStart">@drawable/ic_add_time_plus</item>
        <item name="android:drawablePadding">@dimen/_4sdp</item>
        <item name="android:gravity">center_vertical</item>
        <item name="android:padding">@dimen/_4sdp</item>
        <item name="android:textColor">@color/buttonRed</item>
        <item name="android:textSize">@dimen/_10ssp</item>
        <item name="android:textStyle">bold</item>
    </style>
    <!---->

    <!--ImageView Styles-->
    <style name="circularImageViewTheme"> <!--Changed-->
        <item name="android:layout_width">@dimen/_30sdp</item>
        <item name="android:layout_height">@dimen/_30sdp</item>
        <item name="android:src">@drawable/dummy</item>
        <item name="civ_border_color">@color/imageBorder</item>
        <item name="civ_border_width">1dp</item>
    </style>
    <!---->

    <!--Alert Dialog Styles-->
    <style name="dialogTitleTextViewTheme" parent="Widget.AppCompat.TextView"> <!--Changed-->
        <item name="android:textSize">@dimen/_10ssp</item>
    </style>

    <style name="dialogContentTextViewTheme" parent="Widget.AppCompat.TextView"> <!--Changed-->
        <item name="android:textSize">@dimen/_8ssp</item>
    </style>


    <style name="dialogConfirmButtonTheme" parent="Widget.AppCompat.Button">
        <item name="android:textAllCaps">false</item>
        <item name="android:textColor">@android:color/white</item>
        <item name="android:textSize">@dimen/_9ssp</item>
    </style>

    <style name="dialogCancelButtonTheme" parent="Widget.AppCompat.Button">
        <item name="android:textAllCaps">false</item>
        <item name="android:textColor">@color/button_negative_selector</item>
        <item name="android:textSize">@dimen/_9ssp</item>
    </style>
</resources>
