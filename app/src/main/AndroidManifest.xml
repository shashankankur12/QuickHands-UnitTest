<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.quickhandslogistics">

    <uses-permission android:name="android.permission.CALL_PHONE" />
    <uses-permission android:name="android.permission.READ_EXTERNAL_STORAGE" />
    <uses-permission android:name="android.permission.WRITE_EXTERNAL_STORAGE" />
    <uses-permission android:name="android.permission.CAMERA" />
    <uses-permission android:name="android.permission.INTERNET" />
    <uses-permission android:name="android.permission.ACCESS_NETWORK_STATE" />
    <uses-permission android:name="android.permission.ACCESS_COARSE_LOCATION" />
    <uses-permission android:name="android.permission.ACCESS_FINE_LOCATION" />

    <application
        android:name=".application.MyApplication"
        android:allowBackup="true"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        android:supportsRtl="true"
        android:theme="@style/AppTheme">
        <activity android:name=".modified.views.activities.LumpersActivity"></activity>
        <activity android:name=".modified.views.activities.LumperDetailActivity" />
        <activity android:name=".modified.views.BaseActivity" />
        <activity
            android:name=".view.activities.SignatureActivity"
            android:screenOrientation="portrait" />
        <activity
            android:name=".view.activities.CustomerChooseActivity"
            android:screenOrientation="portrait"
            android:windowSoftInputMode="stateHidden" />
        <activity
            android:name=".view.activities.CompleteCustomerJobHistory"
            android:screenOrientation="portrait"
            android:windowSoftInputMode="stateHidden" />
        <activity
            android:name=".view.activities.CustomerDetailActivity"
            android:screenOrientation="portrait" />
        <activity
            android:name=".view.activities.CustomerLoadActivity"
            android:screenOrientation="portrait" />
        <activity
            android:name=".view.activities.CustomerActivity"
            android:screenOrientation="portrait"
            android:windowSoftInputMode="stateHidden" />
        <activity
            android:name=".view.activities.LumperSheetDetailActivity"
            android:screenOrientation="portrait" />
        <activity
            android:name=".view.activities.CustomerBuildingsActivity"
            android:screenOrientation="portrait" />
        <activity
            android:name=".view.activities.LumperListActivity"
            android:screenOrientation="portrait"
            android:windowSoftInputMode="stateHidden" />
        <activity
            android:name=".view.activities.CompleteLumperJobHistoryDetails"
            android:screenOrientation="portrait"
            android:windowSoftInputMode="stateHidden" />
        <activity
            android:name=".modified.views.activities.LeadProfileActivity"
            android:screenOrientation="portrait" />
        <activity
            android:name=".view.activities.LumperJobHistoryActivity"
            android:screenOrientation="portrait" />
        <activity
            android:name=".modified.views.activities.schedule.ScheduleDetailActivity"
            android:screenOrientation="portrait" />
        <activity
            android:name=".modified.views.activities.schedule.UnScheduleDetailActivity"
            android:screenOrientation="portrait" />
        <activity
            android:name=".modified.views.activities.schedule.WorkItemDetailActivity"
            android:screenOrientation="portrait" />
        <activity
            android:name=".view.activities.AddWorkItemLumpersActivity"
            android:screenOrientation="portrait" />
        <activity
            android:name=".modified.views.activities.schedule.BuildingOperationsActivity"
            android:screenOrientation="portrait" />
        <activity
            android:name=".view.activities.ProfileActivity"
            android:screenOrientation="portrait" />
        <activity
            android:name=".view.activities.ResetPasswordActivity"
            android:screenOrientation="portrait" />
        <activity
            android:name=".modified.views.activities.ForgotPasswordActivity"
            android:screenOrientation="portrait"
            android:windowSoftInputMode="adjustResize" />
        <activity
            android:name=".modified.views.activities.LoginActivity"
            android:screenOrientation="portrait"
            android:windowSoftInputMode="adjustResize" />
        <activity android:name=".modified.views.activities.SplashActivity">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity
            android:name=".modified.views.activities.DashBoardActivity"
            android:screenOrientation="portrait" />
        <activity
            android:name=".modified.views.activities.ChooseLumperActivity"
            android:screenOrientation="portrait" />
        <activity
            android:name=".modified.views.activities.schedule.MarkAttendanceActivity"
            android:screenOrientation="portrait" />

        <provider
            android:name="androidx.core.content.FileProvider"
            android:authorities="${applicationId}.provider"
            android:exported="false"
            android:grantUriPermissions="true">
            <meta-data
                android:name="android.support.FILE_PROVIDER_PATHS"
                android:resource="@xml/file_paths" />
        </provider>

        <service
            android:name=".services.NotificationService"
            android:exported="false">
            <intent-filter>
                <action android:name="com.google.firebase.MESSAGING_EVENT" />
            </intent-filter>
        </service>
    </application>

</manifest>